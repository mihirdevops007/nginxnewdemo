{
    "family": "nginx-app",
    "containerDefinitions": [
        {
            "image": "514523777807.dkr.ecr.us-east-1.amazonaws.com/nginxdemo",
            "name": "nginx-app",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        }
    ],
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::514523777807:role/JeenkinsCICD_EC2",
    "loadBalancers": [  // Add this section to specify the target group and container name
        {
            "targetGroupArn": "arn:aws:elasticloadbalancing:us-east-1:514523777807:loadbalancer/app/nginxnewLB/9c3167764074fe4f",  // Replace with your actual target group ARN
            "containerName": "nginx-app",  // Make sure it matches your container name
            "containerPort": 80
        }
    ]
}
